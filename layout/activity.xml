<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity">

    <Button
        android:id = "@+id/activity_add_department"
        android:layout_width="160dp"
        android:layout_height="68dp"
        android:layout_marginLeft="271dp"
        android:layout_marginStart="271dp"
        android:layout_marginTop="20dp"
        android:background="#00000000" />

    <Button
        android:id="@+id/activity_my_department"
        android:layout_width="160dp"
        android:layout_height="68dp"
        android:layout_marginLeft="422dp"
        android:layout_marginStart="422dp"
        android:layout_marginTop="20dp"
        android:background="#00000000" />

    <Button
        android:id = "@+id/activity_run_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bumen_likai" />
</RelativeLayout>