<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/current_lesson">

    <TextView
        android:id="@+id/lesson_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Mon"
        android:textColor="#ec1725"
        android:layout_marginStart="311dp"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="311dp"/>

    <ImageView
        android:id="@+id/lesson_view_run_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="211dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="211dp"
        android:src="@drawable/kebiao_likai"/>

    <Button
        android:id="@+id/first_lesson"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
