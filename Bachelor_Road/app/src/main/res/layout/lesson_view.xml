        android:textSize="25sp"
        android:layout_marginStart="251dp"
        android:layout_marginTop="107dp"
        android:layout_marginLeft="251dp"
        android:background="#00000000"/>

    <Button
        android:id="@+id/second_lesson"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="3~4 高等数学"
        android:textColor="#0de1ec"
        android:textSize="25sp"
        android:layout_marginStart="251dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="251dp"
        android:background="#00000000"/>

    <Button
        android:id="@+id/third_lesson"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="5~6 高等数学"
        android:textColor="#0de1ec"
        android:textSize="25sp"
        android:layout_marginStart="251dp"
        android:layout_marginTop="195dp"
        android:layout_marginLeft="251dp"
        android:background="#00000000"/>

    <Button
        android:id="@+id/forth_lesson"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="7~8 高等数学"
        android:textColor="#0de1ec"
        android:textSize="25sp"
        android:layout_marginStart="251dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="251dp"
        android:background="#00000000"/>

    <Button
        android:id="@+id/fifth_lesson"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="9~11 高等数学"
        android:textColor="#0de1ec"
        android:textSize="25sp"
        android:layout_marginStart="251dp"
        android:layout_marginTop="284dp"
        android:layout_marginLeft="251dp"
        android:background="#00000000"/>

</RelativeLayout>
