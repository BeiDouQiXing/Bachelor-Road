<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/prize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/prize"/>

    <Button
        android:id="@+id/ending_out_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:background="#00000000" />

    <TextView
        android:id="@+id/ending_name_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="陈涵"
        android:layout_marginLeft="160dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="158dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="第一"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="160dp"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="一"
        android:layout_marginLeft="462dp"
        android:layout_marginStart="462dp"
        android:layout_marginTop="160dp"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/which_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:gravity="center"
        android:text="一等奖"
        android:textColor="#fa0505"
        android:textSize="25dp"
        android:textStyle="bold" />


</RelativeLayout>
